server {
  listen ${NGINX_PORT};

  root /app;
  index index.html index.html;

  location / {
    try_files $uri /index.html =404;
  }

  error_page   500 502 503 504  /50x.html;
  location = /50x.html {
      root   /usr/share/nginx/html;
  }

  location /healthz {
    stub_status on;
    access_log off;
    allow 127.0.0.1;
  }
}
